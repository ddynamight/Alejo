@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Alejo.Data.Entities

@model RegisterViewModel
@inject SignInManager<AppUser> SignInManager

@{
     ViewData["Title"] = "Register";
     Layout = "~/Views/Shared/_Account.cshtml";
}


<div class="container">
     <div class="row">
          <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
               <h2>Register a Local Account</h2>
               <h4 class="text-danger text-center">***all fields are equired***</h4>

               <div asp-validation-summary="All" class="text-danger text-center"></div>

               <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                         <div class="form-group">
                              <label for="fnameTb">
                                   Firstname <span class="glyphicon glyphicon-question-sign">
                                   </span>
                              </label>
                              <input asp-for="Firstname" class="form-control" id="fnameTb" placeholder="Firstname e.g. John" type="text" required />
                         </div>

                         <div class="form-group">
                              <label for="lnameTb">
                                   Lastname <span class="glyphicon glyphicon-question-sign">
                                   </span>
                              </label>
                              <input asp-for="Lastname" class="form-control" id="lnameTb" placeholder="Lastname e.g. Doe" type="text" required />
                         </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                         <div class="form-group">
                              <label for="cityTb">
                                   City <span class="glyphicon glyphicon-question-sign">
                                   </span>
                              </label>
                              <input asp-for="City" class="form-control" id="cityTb" placeholder="City e.g. Ikorodu" type="text" required />
                         </div>

                         <div class="form-group">
                              <label for="stateTb">
                                   Country <span class="glyphicon glyphicon-question-sign">
                                   </span>
                              </label>
                              <input asp-for="Country" class="form-control" id="stateTb" placeholder="State e.g. Lagos" type="text" required />
                         </div>

                         <div class="form-group">
                              <label for="emailTb">
                                   Email Address <span class="glyphicon glyphicon-question-sign">
                                   </span>
                              </label>
                              <input asp-for="Email" class="form-control" id="emailTb" placeholder="Email Address e.g. username@domain.com" type="email" required />
                         </div>

                         <div class="form-group">
                              <label for="passwordTb">
                                   Password <span class="glyphicon glyphicon-question-sign">
                                   </span>
                              </label>
                              <input asp-for="Password" class="form-control" id="passwordTb" placeholder="*********" type="password" required />
                         </div>

                         <div class="form-group">
                              <label for="conPasswordTb">
                                   Confirm Password <span class="glyphicon glyphicon-question-sign">
                                   </span>
                              </label>
                              <input asp-for="ConfirmPassword" class="form-control" id="conPasswordTb" placeholder="*********" type="password" required />
                         </div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                         <div class="form-group">
                              <button type="submit" class="btn btn-unique">Create Account</button>
                         </div>
                         <p class="text-center">
                              <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]"> Already Have Account? Login Here</a>
                         </p>
                    </div>
               </div>
          </form>

